layout {
  default_tab_template {
    children
    pane size=1 borderless=true {
      plugin location="file:/home/jm/.config/zellij/plugins/zjstatus.wasm" {
        format_left   "{mode} #[fg=#89b4fa,bold]{session}"
        format_center "{tabs}"
        format_right  "{command_git_branch} {datetime}{notifications}"
        format_space  ""

        border_enabled  "false"
        border_char     "‚îÄ"
        border_format   "#[fg=#6c7086]{char}"
        border_position "top"
        
        notification_format_unread           "#[fg=#89b4fa,bg=#181825,blink] Ó©´ #[fg=#89b4fa,bg=#181825] {message} "
        notification_format_no_notifications "#[fg=#89b4fa,bg=#181825,dim] Ó©´  "
        notification_show_interval           "10"

        hide_frame_for_single_pane "true"

        mode_normal  "#[fg=#CF142B,bg=green] Ó≠¥ UNLOCKED "
        mode_locked "#[bg=#CF142B] Ó©µ LOCKED "
        mode_session "#[fg=#333333,bg=green] üñ≥ {name} "
        mode_resize "#[fg=#333333,bg=#FF6700] Ó¨¢ {name} "
        mode_pane "#[fg=#333333,bg=green] ÓØà {name} "
        mode_tab "#[fg=#333333,bg=green] ‚≠æ {name} "
        mode_scroll "#[fg=#333333,bg=green] Û∞≠ú {name} "
        mode_enter_search "#[fg=#333333,bg=green] ÓôÑ {name} "
        mode_search "#[fg=#333333,bg=green] ÓôÑ {name} "
        mode_rename_tab "#[fg=#333333,bg=#FF6700] ‚≠æ {name} "
        mode_rename_pane "#[fg=#333333,bg=#FF6700] ÓØà {name} "
        mode_move "#[fg=#333333,bg=green] Ó¨¢ {name} "
        mode_prompt "#[fg=#333333,bg=green] Ó™Ö {name} "
        mode_default_to_mode "locked"

        tab_normal   "#[fg=#6C7086] {index}::{name} "
        tab_normal_fullscreen "#[fg=#6C7086] {index}::{name} Ó≠å "
        tab_normal_sync "#[fg=#6C7086] {index}::{name} Ó©∑ "

        tab_active   "#[fg=#89B4FA,bold,italic] {name} "
        tab_active_fullscreen "#[fg=#89B4FA,bold,italic] {name} Ó≠å "
        tab_active_sync "#[fg=#89B4FA,bold,italic] {name} Ó©∑ "

        tab_separator "#[fg=#89B4FA]‚ùØ"

        command_git_branch_command     "git rev-parse --abbrev-ref head"
        command_git_branch_format      "#[fg=blue] {stdout} "
        command_git_branch_interval    "10"
        command_git_branch_rendermode  "static"

        datetime        "#[fg=#89b4fa,bold] {format} "
        datetime_format "%A, %d %b %Y %H:%M"
        datetime_timezone "America/Chicago"
      }
    }
  }
  tab name="Overview" focus=true cwd="~/.config/" {
    pane split_direction="horizontal" {
      pane {
        size "75%"
        focus true
        borderless true
        command "nvim"
      }
      pane 
    }
  }
