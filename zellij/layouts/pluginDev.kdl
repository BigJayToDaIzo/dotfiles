layout {
    pane split_direction="vertical" {
        pane {
            close_on_exit false
            cwd "/home/jm/Projects/bfs/weather-pal"
            command "nvim"
            args "src/main.rs"
        }
        pane size="30%"{
            pane {
                cwd "/home/jm/Projects/bfs/weather-pal"
                edit "Cargo.toml" 
            }
            pane stacked=true {
                pane size="10%" command="bash" name="COMPILE AND RELOAD PLUGIN" {
                    cwd "/home/jm/Projects/bfs/weather-pal"
                    // args "-c" "cargo build && zellij action start-or-reload-plugin file:target/wasm32-wasi/debug/weather-pal.wasm"
                    // if you have "watchexec" installed, you can comment the above line and uncomment the below one to build + reload the plugin on fs changes
                    args "-c" "watchexec 'cargo build && zellij action start-or-reload-plugin file:target/wasm32-wasi/debug/weather-pal.wasm'"
                }
                pane expanded=true {
                    cwd "/home/jm/Projects/bfs/weather-pal"
                    plugin location="file:target/wasm32-wasi/debug/weather-pal.wasm" {
                        config_key "config_value"
                        print_config true
                    }
                }
            }
        }
    }
    pane size=1 borderless=true {
        plugin location="https://github.com/dj95/zjstatus/releases/latest/download/zjstatus.wasm" {
            format_left   "#[fg=#89B4FA,bold]{session} {mode}"
            format_center "{tabs}"
            format_right  "{notifications} {command_git_branch} {datetime}"
            format_space  ""

            border_enabled  "false"
            border_char     "â”€"
            border_format   "#[fg=#6C7086]{char}"
            border_position "top"
            
            notification_format_unread           "#[fg=#89B4FA,bg=#181825,blink] î©« #[fg=#89B4FA,bg=#181825] {message} "
            notification_format_no_notifications "#[fg=#89B4FA,bg=#181825,dim] î©«  "
            notification_show_interval           "10"

            hide_frame_for_single_pane "true"

            mode_normal  "#[fg=#CF142B,bg=green] î­´ UNLOCKED "
            mode_locked "#[bg=#CF142B] î©µ LOCKED "
            mode_session "#[bg=green] ðŸ–³ {name} "
            mode_resize "#[bg=#FF6700] î¬¢ {name} "
            mode_pane "#[bg=green] î¯ˆ {name} "
            mode_tab "#[bg=green] â­¾ {name} "
            mode_scroll "#[bg=green] ó°­œ {name} "
            mode_enter_search "#[bg=green] î™„ {name} "
            mode_search "#[bg=green] î™„ {name} "
            mode_rename_tab "#[bg=green] â­¾ {name} "
