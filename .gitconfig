[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only


[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[delta]
  navigate = true # n and N to move between DIFF sections
  light = false # set to true for terms w/ a light bg-color
  features = decorations

[delta "decorations"]
  commit-decoration-style = blue ol
  hunk-header-decoration-style = blue box
  hunk-header-file-style = red


